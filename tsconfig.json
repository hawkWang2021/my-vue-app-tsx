{
	"compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*":["src/*"]
    },
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["vitest/globals"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
    "auto-imports.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
